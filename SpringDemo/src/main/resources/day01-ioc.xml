<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!--IoC就是指对象的创建，并不是在代码中用new操作new出来的，而是通过Spring进行配置创建的。-->
    <!--bean实例化方式有三种：1、通过构造实例化 2、通过静态工厂实例化 3、通过非静态工厂实例化-->

    <!--id是bean的唯一标识，名字一般为类名首字母小写-->
    <!--class是bean的全路径类名，包.类名称-->
    <bean id="userDao" class="com.test.day01.hello.dao.UserDaoImpl"/>

    <bean id="userService" class="com.test.day01.hello.service.UserServiceImpl">
        <property name="userDao" ref="userDao"/>
    </bean>

    <!--导入其他xml文件-->
    <import resource="day01-ioc-emp.xml"/>
</beans>
