<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="userDao" class="com.test.dao.UserDaoImpl"> </bean>
    <bean id="userDaoMysql" class="com.test.dao.UserDaoMysqlImpl"></bean>
    <bean id="daoOraclel" class="com.test.dao.UserDaoOraclelImpl"></bean>

    <bean id="userService" class="com.test.service.UserServiceImpl">
        <!-- ref表示引用Spring容器中创建好的bean -->
        <!-- value表示指定具体的值-->
        <property name="userDao" ref="userDaoMysql"/>
    </bean>
</beans>