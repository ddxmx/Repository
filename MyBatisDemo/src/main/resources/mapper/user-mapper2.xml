<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.test.mybatis.dao.UserDao2">
    <!--hello是com.test.mybatis.pojo.User的别名，resultType中直接写别名即可-->
    <select id="getUserByName" parameterType="String" resultType="hello">
        select *
        from mybatis.user
        where name = #{name}
    </select>
</mapper>